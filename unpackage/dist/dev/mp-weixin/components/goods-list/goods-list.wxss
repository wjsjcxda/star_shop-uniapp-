.goods_list {
  padding: 0 15rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goods_list .goods {
  background: #fff;
  margin: 10rpx 0;
  width: 355rpx;
  padding: 15rpx;
  box-sizing: border-box;
}
.goods_list .goods image {
  width: 80%;
  height: 150px;
  display: block;
  margin: 0 auto;
}
.goods_list .goods .price {
  color: #4876FF;
  font-size: 36rpx;
  margin: 20rpx 0 5rpx 0;
}
.goods_list .goods .price text:nth-child(2) {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 17rpx;
  text-decoration: line-through;
}
.goods_list .goods .name {
  font-size: 28rpx;
  line-height: 50rpx;
  padding-top: 15rpx;
  padding-bottom: 10rpx;
}

