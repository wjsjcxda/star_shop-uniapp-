.news_item {
  display: flex;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #4876FF;
}
.news_item image {
  min-width: 200rpx;
  max-width: 200rpx;
  height: 150rpx;
}
.news_item .right {
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.news_item .right .tit {
  font-size: 30rpx;
}
.news_item .right .info {
  font-size: 24rpx;
}
.news_item .right .info text:nth-child(2) {
  margin-left: 30rpx;
}

