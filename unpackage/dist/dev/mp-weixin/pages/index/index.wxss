.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.nav {
  display: flex;
}
.nav .nav_item {
  width: 25%;
  text-align: center;
}
.nav .nav_item view {
  width: 120rpx;
  height: 120rpx;
  background: #4876FF;
  border-radius: 50%;
  margin: 10px auto;
  line-height: 120rpx;
  color: #fff;
  font-size: 45rpx;
}
.nav .nav_item text {
  font-size: 30rpx;
}
.hot_goods {
  background: #eee;
  overflow: hidden;
  margin-top: 10px;
}
.hot_goods .tit {
  height: 50px;
  line-height: 50px;
  color: #4876FF;
  text-align: center;
  letter-spacing: 20px;
  background: #fff;
  margin: 7px 0;
}

